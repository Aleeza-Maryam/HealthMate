<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Diet Tracker"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:padding="12dp"
            android:background="@drawable/rounded_header"/>

        <!-- Calories Display Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="@color/light_purple">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Total Calories Today"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_purple"/>

                <TextView
                    android:id="@+id/txtCalories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Calories: 0"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/txtTip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter your first food!"
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Food Input Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="@color/light_blue">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âž• Add Food Item"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_blue"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Examples: 1 cup milk, 2 eggs, 100g chicken"
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/edtFood"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Enter food with quantity"
                        android:textSize="16sp"
                        android:padding="12dp"
                        android:background="@drawable/rounded_tips"/>

                    <Button
                        android:id="@+id/btnAddFood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:background="@drawable/rounded_button_purple"
                        android:layout_marginStart="12dp"
                        android:padding="12dp"/>
                </LinearLayout>

                <!-- Examples -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quick add:"
                        android:textSize="14sp"
                        android:textColor="@color/gray"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Apple "
                        android:textSize="14sp"
                        android:textColor="@color/blue"
                        android:onClick="onAppleClick"
                        android:clickable="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" milk "
                        android:textSize="14sp"
                        android:textColor="@color/blue"
                        android:onClick="onMilkClick"
                        android:clickable="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Chicken "
                        android:textSize="14sp"
                        android:textColor="@color/blue"
                        android:onClick="onChickenClick"
                        android:clickable="true"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Daily Goal Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="30dp"
            app:cardBackgroundColor="@color/light_pink">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Daily Calorie Goal"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_purple"/>

                <ProgressBar
                    android:id="@+id/progressCalories"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginTop="16dp"
                    android:progress="30"
                    android:progressTint="@color/purple"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recommended: 2000 calories/day"
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    android:gravity="center"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>