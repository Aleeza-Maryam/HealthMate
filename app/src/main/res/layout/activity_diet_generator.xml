<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:padding="16dp"
            android:background="@android:color/white"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Personalized Diet"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get custom diet plans based on your weight"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Weight Info Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:padding="20dp"
            android:background="@android:color/white"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Your Weight Profile"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:tint="#4CAF50"
                    android:layout_marginEnd="16dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtCurrentWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#333333"/>

                    <TextView
                        android:id="@+id/txtWeightCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Update Weight Button -->
            <Button
                android:id="@+id/btnUpdateWeight"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Update Weight"
                android:textColor="@android:color/white"
                android:background="#4CAF50"
                android:drawableStart="@android:drawable/ic_menu_edit"
                android:drawableTint="@android:color/white"/>
        </LinearLayout>

        <!-- Diet Goal Selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:padding="20dp"
            android:background="@android:color/white"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Select Your Goal"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="16dp"/>

            <RadioGroup
                android:id="@+id/rgGoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rbLoseWeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lose Weight"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:paddingVertical="12dp"
                    android:buttonTint="#FF6B9D"/>

                <RadioButton
                    android:id="@+id/rbMaintain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Maintain Weight"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:paddingVertical="12dp"
                    android:buttonTint="#4CAF50"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/rbGainWeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gain Weight/Muscle"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:paddingVertical="12dp"
                    android:buttonTint="#2196F3"/>
            </RadioGroup>
        </LinearLayout>

        <!-- Activity Level -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:padding="20dp"
            android:background="@android:color/white"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Activity Level"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="16dp"/>

            <Spinner
                android:id="@+id/spinnerActivity"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:drawable/edit_text"
                android:paddingHorizontal="12dp"/>
        </LinearLayout>

        <!-- Generate Diet Button -->
        <Button
            android:id="@+id/btnGenerateDiet"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text=" GENERATE DIET PLAN"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="#9C27B0"
            android:drawableStart="@android:drawable/ic_menu_compass"
            android:drawableTint="@android:color/white"
            android:layout_marginBottom="24dp"/>

        <!-- Diet Plan Display Area -->
        <LinearLayout
            android:id="@+id/cardDietPlan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:padding="20dp"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ½ï¸ Your Personalized Diet"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="16dp"/>

            <!-- Daily Calories -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:padding="16dp"
                android:background="#FFF3E0">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_compass"
                    app:tint="#FF9800"
                    android:layout_marginEnd="16dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtDailyCalories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#333333"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daily Calories"
                        android:textSize="14sp"
                        android:textColor="#666666"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Diet Plan Details -->
            <TextView
                android:id="@+id/txtDietPlan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15sp"
                android:textColor="#444444"
                android:lineSpacingExtra="6dp"
                android:padding="8dp"/>

            <!-- Save Plan Button -->
            <Button
                android:id="@+id/btnSavePlan"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="ðŸ’¾ Save This Plan"
                android:textColor="@android:color/white"
                android:background="#673AB7"
                android:layout_marginTop="16dp"/>
        </LinearLayout>

        <!-- Tips Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="#E8F5E9"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Diet Tips"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ Drink water before meals\nâ€¢ Eat protein with every meal\nâ€¢ Include healthy fats\nâ€¢ Choose whole grains\nâ€¢ Eat plenty of vegetables\nâ€¢ Limit processed foods"
                android:textSize="14sp"
                android:textColor="#666666"
                android:lineSpacingExtra="6dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>