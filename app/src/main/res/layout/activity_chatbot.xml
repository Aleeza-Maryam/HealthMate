<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F7FF"
    android:padding="8dp">

    <!-- ScrollView for chat messages -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:padding="12dp"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/chatTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="#F8F8F8"
            android:text="ðŸ’™ Welcome to HealthMate!\n\nI'm here to help you with health questions, wellness tips, and general medical information.\n\nWhat would you like to know today?"
            android:textColor="#8A2BE2"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp" />

    </ScrollView>

    <!-- Input area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:elevation="4dp">

        <EditText
            android:id="@+id/inputEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#4B0082"
            android:hint="Type your message..."
            android:inputType="textMultiLine"
            android:maxLines="3"

            android:background="#F0F0FF"
            android:padding="12dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/sendButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:text="âž¤"
            android:textSize="18sp"
            android:backgroundTint="#D517CC"
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp"
            android:elevation="2dp" />

    </LinearLayout>

</LinearLayout>