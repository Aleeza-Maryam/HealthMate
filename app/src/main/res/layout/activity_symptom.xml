<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/pink"
        android:padding="24dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="30dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_symptom"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ¥ Symptom Checker"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:shadowColor="#7B61FF"
                android:shadowRadius="4"/>
        </LinearLayout>

        <!-- Symptoms Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="28dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Your Symptoms"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#9C27B0"
                    android:layout_marginBottom="20dp"/>

                <!-- Symptom Checkboxes -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="28dp">

                    <!-- Fever -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp"

                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginBottom="8dp"
                        android:id="@+id/layoutFever">

                        <CheckBox
                            android:id="@+id/cbFever"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="#9C27B0"
                            android:scaleX="1.2"
                            android:scaleY="1.2"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ¤’ Fever"
                            android:textSize="18sp"
                            android:textColor="#333333"
                            android:layout_marginStart="12dp"/>
                    </LinearLayout>

                    <!-- Cough -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp"

                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginBottom="8dp"
                        android:id="@+id/layoutCough">

                        <CheckBox
                            android:id="@+id/cbCough"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="#2196F3"
                            android:scaleX="1.2"
                            android:scaleY="1.2"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ˜· Cough"
                            android:textSize="18sp"
                            android:textColor="#333333"
                            android:layout_marginStart="12dp"/>
                    </LinearLayout>

                    <!-- Headache -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp"

                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginBottom="8dp"
                        android:id="@+id/layoutHeadache">

                        <CheckBox
                            android:id="@+id/cbHeadache"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="#E91E63"
                            android:scaleX="1.2"
                            android:scaleY="1.2"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ¤• Headache"
                            android:textSize="18sp"
                            android:textColor="#333333"
                            android:layout_marginStart="12dp"/>
                    </LinearLayout>

                    <!-- Fatigue -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp"

                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginBottom="8dp"
                        android:id="@+id/layoutFatigue">

                        <CheckBox
                            android:id="@+id/cbFatigue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="#9C27B0"
                            android:scaleX="1.2"
                            android:scaleY="1.2"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ˜´ Fatigue"
                            android:textSize="18sp"
                            android:textColor="#333333"
                            android:layout_marginStart="12dp"/>
                    </LinearLayout>

                    <!-- Sore Throat -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/layoutThroat">

                        <CheckBox
                            android:id="@+id/cbThroat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="#2196F3"
                            android:scaleX="1.2"
                            android:scaleY="1.2"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ«¤ Sore Throat"
                            android:textSize="18sp"
                            android:textColor="#333333"
                            android:layout_marginStart="12dp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Check Button -->
                <Button
                    android:id="@+id/btnCheck"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ðŸ” CHECK CONDITION"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/rounded_button_gradient"
                    android:padding="0dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Result Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#E8F4FD"
            android:layout_marginBottom="25dp"
            android:visibility="gone"
            android:id="@+id/cardResult">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“‹ Analysis Result"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#2196F3"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/txtResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No symptoms selected"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="8dp"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡ Recommended Advice"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#9C27B0"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/txtAdvice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select symptoms and click check"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:lineSpacingExtra="6dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Common Conditions Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FCE4EC">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“š Common Conditions"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#E91E63"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ¤§ Cold"
                        android:textSize="14sp"
                        android:textColor="#666666"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fever, Cough"
                        android:textSize="14sp"
                        android:textColor="#2196F3"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ¤’ Flu"
                        android:textSize="14sp"
                        android:textColor="#666666"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fever, Fatigue"
                        android:textSize="14sp"
                        android:textColor="#E91E63"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ¦  COVID-19"
                        android:textSize="14sp"
                        android:textColor="#666666"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fever, Cough, Fatigue"
                        android:textSize="14sp"
                        android:textColor="#9C27B0"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>