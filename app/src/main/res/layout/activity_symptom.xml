<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ©º AI Symptom Checker"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:textColor="#2196F3"/>

        <!-- Instructions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select all symptoms you're experiencing:"
            android:textSize="16sp"
            android:paddingBottom="8dp"
            android:textColor="#333333"/>

        <!-- 7 Symptom Checkboxes (with clickable layouts) -->

        <!-- 1. Runny Nose -->
        <LinearLayout
            android:id="@+id/layoutRunnyNose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="4dp">
            <CheckBox
                android:id="@+id/cbRunnyNose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:buttonTint="#2196F3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Runny or stuffy nose"
                android:textSize="16sp"
                android:textColor="#333333"/>
        </LinearLayout>

        <!-- 2. Cough -->
        <LinearLayout
            android:id="@+id/layoutCough"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="4dp">
            <CheckBox
                android:id="@+id/cbCough"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:buttonTint="#2196F3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cough (dry or with phlegm)"
                android:textSize="16sp"
                android:textColor="#333333"/>
        </LinearLayout>

        <!-- 3. Fever -->
        <LinearLayout
            android:id="@+id/layoutFever"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="4dp">
            <CheckBox
                android:id="@+id/cbFever"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:buttonTint="#2196F3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fever (above 38Â°C)"
                android:textSize="16sp"
                android:textColor="#333333"/>
        </LinearLayout>

        <!-- 4. Sneezing -->
        <LinearLayout
            android:id="@+id/layoutSneezing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="4dp">
            <CheckBox
                android:id="@+id/cbSneezing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:buttonTint="#2196F3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sneezing frequently"
                android:textSize="16sp"
                android:textColor="#333333"/>
        </LinearLayout>

        <!-- 5. Sore Throat -->
        <LinearLayout
            android:id="@+id/layoutSoreThroat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="4dp">
            <CheckBox
                android:id="@+id/cbSoreThroat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:buttonTint="#2196F3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sore throat"
                android:textSize="16sp"
                android:textColor="#333333"/>
        </LinearLayout>

        <!-- 6. Headache -->
        <LinearLayout
            android:id="@+id/layoutHeadache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="4dp">
            <CheckBox
                android:id="@+id/cbHeadache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:buttonTint="#2196F3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Headache"
                android:textSize="16sp"
                android:textColor="#333333"/>
        </LinearLayout>

        <!-- 7. Body Aches -->
        <LinearLayout
            android:id="@+id/layoutBodyAches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="16dp">
            <CheckBox
                android:id="@+id/cbBodyAches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:buttonTint="#2196F3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Body aches or fatigue"
                android:textSize="16sp"
                android:textColor="#333333"/>
        </LinearLayout>

        <!-- Check Button -->
        <Button
            android:id="@+id/btnCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ¤– Analyze with AI"
            android:textSize="18sp"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:stateListAnimator="@null"
            android:elevation="4dp"/>

        <!-- Results Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#F8F9FA"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Result Title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ” Diagnosis Results"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2196F3"
                    android:paddingBottom="16dp"/>

                <!-- Result -->
                <TextView
                    android:id="@+id/txtResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:paddingBottom="12dp"
                    android:lineSpacingExtra="4dp"/>

                <!-- Confidence -->
                <TextView
                    android:id="@+id/txtConfidence"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:paddingBottom="16dp"
                    android:lineSpacingExtra="2dp"/>

                <!-- Advice Title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“‹ Recommendations:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:paddingBottom="8dp"/>

                <!-- Advice -->
                <TextView
                    android:id="@+id/txtAdvice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#444444"
                    android:lineSpacingExtra="6dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Disclaimer -->
        <TextView
            android:id="@+id/txtDisclaimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âš ï¸ IMPORTANT: This tool is for informational purposes only. It is NOT a substitute for professional medical advice, diagnosis, or treatment. Always seek the advice of your physician or other qualified health provider with any questions you may have regarding a medical condition."
            android:textSize="12sp"
            android:textColor="#D32F2F"
            android:padding="16dp"
            android:background="#FFEBEE"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="4dp"/>

    </LinearLayout>
</ScrollView>